<Project Sdk="Microsoft.NET.Sdk.Web">

	<PropertyGroup>
		<TargetFramework>net6.0</TargetFramework>
		<Nullable>enable</Nullable>
		<ImplicitUsings>enable</ImplicitUsings>
		<RootNamespace>MDS.AspnetServices</RootNamespace>
		<Platforms>AnyCPU;x64</Platforms>
	</PropertyGroup>

	<PropertyGroup>
		 <IsPackable>true</IsPackable>
		<GeneratePackageOnBuild>True</GeneratePackageOnBuild>
		<Description>MarkdownServer Middleware for ASPNet Core</Description>
		<Copyright>2021 - Gateway Prgramming School, Inc.</Copyright>
		<PackageReadmeFile>README.md</PackageReadmeFile>
		<PackageLicenseExpression>MIT</PackageLicenseExpression>
		<PackageRequireLicenseAcceptance>True</PackageRequireLicenseAcceptance>
		<PackageId>MarkdownServer</PackageId>
		<Authors>Gateway Programming School, Inc.</Authors>
		<Product>MarkdownServer</Product>
	</PropertyGroup>

	<ItemGroup>
		<Compile Remove="Common\JsonExtensions.cs" />
	</ItemGroup>

	<ItemGroup>
		<None Include="..\..\README.md">
			<Pack>True</Pack>
			<PackagePath>\</PackagePath>
		</None>
	</ItemGroup>

	<ItemGroup>
		<PackageReference Include="Faslinq" Version="1.0.5" />
		<PackageReference Include="GitVersion.MsBuild" Version="5.8.1">
			<PrivateAssets>all</PrivateAssets>
			<IncludeAssets>runtime; build; native; contentfiles; analyzers; buildtransitive</IncludeAssets>
		</PackageReference>
		<PackageReference Include="Markdig" Version="0.26.0" />
		<PackageReference Include="Newtonsoft.Json" Version="13.0.1" />
	</ItemGroup>

	<ItemGroup>
		<ProjectReference Include="../../submodules/Markdig.SyntaxHighlighting/src/Markdig.SyntaxHighlighting/Markdig.SyntaxHighlighting.csproj" />
		<ProjectReference Include="..\..\submodules\ColorCodePortable\ColorCode\ColorCode.csproj" />
	</ItemGroup>

	<ItemGroup>
		<None Include="$(OutDir)\Markdig.SyntaxHighlighting.dll" Pack="lib\Markdig.SyntaxHighlighting.dll" />
		<None Include="$(OutDir)\ColorCode.dll" Pack="lib\ColorCode.dll" />
	</ItemGroup>
</Project>
