<Project Sdk="Microsoft.NET.Sdk.Web">

	<PropertyGroup Label="Configuration" Condition="'$(Configuration)|$(Platform)'=='Debug|AnyCPU'">
	  <TypeScriptSourceMap>False</TypeScriptSourceMap>
	</PropertyGroup>

	<PropertyGroup Label="Configuration" Condition="'$(Configuration)|$(Platform)'=='Release|AnyCPU'">
	  <TypeScriptSourceMap>False</TypeScriptSourceMap>
	</PropertyGroup>

	<PropertyGroup>
		<TargetFramework>net6.0</TargetFramework>
		<Nullable>enable</Nullable>
		<ImplicitUsings>enable</ImplicitUsings>
		<RootNamespace>MDS.AspnetServices</RootNamespace>
	</PropertyGroup>

	<PropertyGroup>
		<GeneratePackageOnBuild>True</GeneratePackageOnBuild>
		<Description>MarkdownServer Middleware for ASPNet Core</Description>
		<Copyright>2021 - Gateway Prgramming School, Inc.</Copyright>
		<PackageReadmeFile>README.md</PackageReadmeFile>
		<PackageLicenseExpression>MIT</PackageLicenseExpression>
		<PackageRequireLicenseAcceptance>True</PackageRequireLicenseAcceptance>
		<PackageId>MarkdownServer</PackageId>
		<Authors>Gateway Programming School, Inc.</Authors>
		<Product>MarkdownServer</Product>
	</PropertyGroup>

	<ItemGroup>
	  <Compile Remove="Common\JsonExtensions.cs" />
	</ItemGroup>

	<ItemGroup>
	  <None Include="..\..\README.md">
	    <Pack>True</Pack>
	    <PackagePath>\</PackagePath>
	  </None>
	</ItemGroup>

	<ItemGroup>
		<PackageReference Include="Faslinq" Version="1.0.5" />
		<PackageReference Include="GitVersion.MsBuild" Version="5.8.1">
		  <PrivateAssets>all</PrivateAssets>
		  <IncludeAssets>runtime; build; native; contentfiles; analyzers; buildtransitive</IncludeAssets>
		</PackageReference>
		<PackageReference Include="Markdig" Version="0.26.0" />
		<PackageReference Include="Newtonsoft.Json" Version="13.0.1" />
	</ItemGroup>
	
	<ItemGroup>
		<ProjectReference Include="../../3rdParty/Markdig.SyntaxHighlighting/src/Markdig.SyntaxHighlighting/Markdig.SyntaxHighlighting.csproj" />
		<ProjectReference Include="..\..\3rdParty\ColorCodePortable\ColorCode\ColorCode.csproj" />
	</ItemGroup>
</Project>
